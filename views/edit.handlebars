<h3 class="text-3xl font-semibold lg:mb-6">Edit Your Profile</h3>

<form
    class="lg:flex lg:justify-between lg:flex-wrap"
    action="/profile/edit"
    method="POST"
>
    {{>csurf}}

    <div class="flex flex-col lg:w-5/12">
        <label class="mt-4 text-left text-sm italic" for="">
            <input
                class="input-field w-full"
                type="text"
                name="first"
                value="{{ first }}"
            />
            First Name
        </label>

        <label class="mt-4 text-left text-sm italic" for="">
            <input
                class="input-field w-full"
                type="text"
                name="last"
                value="{{ last }}"
            />
            Last Name
        </label>

        <label class="mt-4 text-left text-sm italic" for="">
            <input
                class="input-field w-full"
                type="text"
                name="email"
                value="{{ email }}"
            />
            E-Mail
        </label>

        <label class="mt-4 text-left text-sm italic" for="">
            <input
                class="input-field w-full"
                type="text"
                name="city"
                value="{{ city }}"
            />
            City
        </label>
    </div>

    <div class="flex flex-col lg:w-5/12">
        <label class="mt-4 text-left text-sm italic" for="">
            <input
                class="input-field w-full"
                type="text"
                name="age"
                value="{{ age }}"
            />
            Age
        </label>

        <label id="url-input" class="mt-4 text-left text-sm italic" for="">
            <input
                class="input-field w-full"
                type="text"
                name="url"
                value="{{ url }}"
            />
            Website
        </label>

        <label class="mt-4 text-left text-sm italic" for="">
            <input
                id="password-input"
                class="input-field w-full"
                type="password"
                name="password"
                value="password"
            />
            <span id="password-text">Change Password</span>
        </label>

        <label class="mt-4 text-left text-sm italic" for="">
            <input
                class="input-field w-full"
                type="password"
                name="match"
                value="password"
            />
            Confirm Password
        </label>
    </div>

    <button type="submit" class="btn w-2/3 mt-8 lg:mt-12 lg:w-2/3 lg:mx-auto">
        Submit
    </button>
</form>

<hr class="h-px bg-red-600 mt-10 mb-6 mx-auto" />

<div class="flex flex-col w-2/3 mx-auto">
    <form action="/profile/deleteProfile" method="POST">
        {{>csurf}}
        <button
            type="submit"
            class="btn w-full my-2 bg-red-600 hover:bg-red-500"
        >
            DELETE PROFILE
        </button>
    </form>

    <form action="/profile/deleteSignature" method="POST">
        {{>csurf}}
        <button
            type="submit"
            class="btn w-full my-2 bg-red-600 hover:bg-red-500"
        >
            DELETE SIGNATURE
        </button>
    </form>
</div>

<script src="/password.js"></script>
