{{#if error}}
{{>error-message}}
{{/if}}
<form class="mb-8 mx-auto md:w-1/2 lg:w-3/5" method="POST" action="/login">
    {{>csurf}}
    <div class="flex flex-col items-center w-full">
        <h3 class="text-2xl mb-4 font-semibold md:mb-8">Login To Petition</h3>
        <input
            type="text"
            name="email"
            class="w-full input-field mb-4"
            placeholder="E-Mail-Address"
        />
        <input
            type="password"
            name="password"
            class="w-full input-field mb-4"
            placeholder="Password"
        />
        <button class="w-full btn md:mt-4" type="submit">Log In</button>
    </div>
</form>
<p>
    Click <a class="text-blue-600 font-semibold" href="/register">here</a> to
    create a new account.
</p>
