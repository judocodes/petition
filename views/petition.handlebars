{{#if error}}
{{>error-message}}
{{/if}}

<h1 class="text-2xl md:text-xl lg:text-3xl font-bold">
    Sign Here to Stop this Petition from Reaching 50 Sign-Ups.
    <br />
    Let's make it stop!
</h1>

<form
    class="flex flex-col justify-center items-center mt-8"
    action="/petition"
    method="POST"
>
    {{>csurf}}
    <canvas
        class="bg-blue-100 border-b-2 border-gray-500 rounded-lg shadow mb-1 hover:shadow-md"
        height="100"
        width="900"
    ></canvas>
    <p class="mb-10 text-xs">Your Signature</p>
    <input id="signature" name="signature" type="hidden" />
    <div class="w-full flex flex-col lg:flex-row lg:justify-center">
        <button class="btn mb-4 lg:w-1/3 lg:mx-2" type="submit">Submit</button>
        <button class="btn mb-4 lg:w-1/3 lg:mx-2" id="clear-canvas">
            Redo
        </button>
    </div>
</form>

<script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"
></script>
<script src="script.js"></script>
